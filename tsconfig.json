{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
  },
  "include": [
    "app/**/**/**/*",
    "app/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
}